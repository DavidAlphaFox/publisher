{lib_dirs, ["apps", "deps"]}.
{erl_opts, [debug_info, {i, "apps"}, warnings_as_errors]}.
{deps, [
  {alsa, ".*", {git, "git://github.com/erlyvideo/alsa.git", "master"}},
  {h264, ".*", {git, "git://github.com/erlyvideo/h264.git", "master"}},
  % {jpeg, ".*", {git, "git@github.com:erlyvideo/jpeg.git", "master"}},
  {uvc, ".*", {git, "git://github.com/erlyvideo/uvc.git", "master"}}
]}.
{sub_dirs, [
	"apps/erlmedia",
	"apps/rtmp",
	"apps/rtp",
	"apps/rtsp",
  "apps/publisher"
]}.
{pre_hooks, [{compile, "rm -f src/._*.erl"}]}.
